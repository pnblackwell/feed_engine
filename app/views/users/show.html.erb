 <div class='content user-show'>

  <%= link_to "Create A New Feed", new_feed_path, id: 'newfeedbutton', class: 'btn btn-primary' %>

  <ul class='nav nav-tabs'>
    <li class='active'><a href="#manageFeeds" data-toggle="tab">Manage Feeds</a></li>
    <li><a href="#myAccount" data-toggle="tab">My Account</a></li>
  </ul>
   <div class='tab-content'>

      <div class="tab-pane active" id='manageFeeds'>

          <div class="container-fluid">
              <% if @feeds.present? %>
              <% @feeds.each do |feed| %> 
            <div class="row-fluid">
              <div class="span2">
                <h4><%= feed.name %></h4>
                <p> Visit Your Feed: <%= link_to feed.subdomain+'.photoline-feed.us/', root_url(subdomain: feed.subdomain) %></p>
              </div>
              <div class="span10">
                <h3>Searches in This Feed</h3>
                      <% feed.feed_items.each do |feed|%>
                        <%= image_tag(feed.photo_url, :size => "200x200") %>
                      <%end %>

                      <% if feed.searches.any? %>
                        <table class="table table-striped">
                        <tbody>
                        <thead>
                      </thead>
                      
                      <% feed.searches.each do |search| %>
                        <tr>
                        </tr>
                      <% end %>
                    </div>
                    </div>
                  </div>
                        </tbody>
                        </table>
                  <% end %>
            </div>
          </div>
          <hr>
          <% end %>


        <% else %>
            You Don't Have Any Feeds Yet! Create One.
        <% end %>
      </div>
    </div>
        <div class='tab-pane' id='myAccount'>
          <h1> Account Information For:
              <span id= 'username'> <%= @user.username %> </span>
          </h1>

          <!-- needs a real link! -->
          <p> Your email address: <%= @user.email %></p>
          <p><%= link_to 'Update Email', root_path %></p>
          <% link_to "Disable Your Account", root_path %>
        </div>
    </div>
  </div>

</div>


