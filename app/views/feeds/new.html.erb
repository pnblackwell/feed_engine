<div id="newfeed" class="modal hide fade feed_modal" tabindex="-1" role="dialog" aria-labelledby="newfeedLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="newfeedLabel">Create Your New Feed</h3>
    </div>
    <div class="modal-body">
      <p id='new-feed-description'>Search flickr and 500px for some awesomeness!
      </p>

      <%= form_for @feed do |f| %>
        <%= f.label 'Name Your New Feed' %>
        <p class='note'>(e.g., Kittens Are Cute!)</p>
        <%= f.text_field :name %>
        <%= f.label "Give Your Feed Its Own Subdomain" %>
        <p class='note'>(e.g., kittens. Please, no spaces or special characters.)</p>
        <%= f.text_field :subdomain %>

          <%= f.label "What sites do you want to search?" %>
          <div>
            <label class="checkbox inline">
              <input type="checkbox" name="feed[sources][]" id="inlineCheckbox1" value="500px"> 500px
            </label>
            <label class="checkbox inline">
              <input type="checkbox" name="feed[sources][]" id="inlineCheckbox2" value="flickr"> flickr
            </label>
          </div>
          <%= f.label 'Select Search Type' %>
          <div>
            <label>
              <%= f.radio_button :search_type, :username, class:'radio_button' %>
              Screen Name
            </label>
          </div>
          <div>
            <label>
              <%= f.radio_button :search_type, :keyword, class:'radio_button' %>
              Keyword
            </label>
          </div>

          <%= f.label 'Search' %>
          <p class='note'>(e.g., kittens, boots, zombies.)</p>
          <%= f.text_field :value, id: 'value' %>

  <br>

  <%= f.submit "Create Feed", class: 'btn btn-large btn-primary', id:'create-feed' %>
<% end %>

    </div>
</div>



<script type="text/javascript">
    $(window).load(function(){
        $('#newfeed').modal({backdrop: 'static'});
    });
</script>




