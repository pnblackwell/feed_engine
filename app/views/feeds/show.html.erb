<div class="content">

  <h1 class='feed_title'> <%= @feed.name %> </h1>

  <% if @feed_items.any? %>

    <% @feed_items.each do |item| %>
    <div class='show-photo hidden'>
      <p><%= image_tag(item.photo_url) %></p>
      <div class='photo-options'>
        <div class='photo-metadata'>
          <% if item.photo_title != '' %>
            <p><em>Photo Title:</em> <%= item.photo_title %></p>
          <% end %>

          <p><em>Photo Owner:</em> <%= item.owner %></p>
          <p><em>Source:</em> <%= item.source %></p>
        </div>

        <div class='photo-buttons'>
          <button class='slidedown btn btn-inverse'><i class='icon-chevron-up icon-white'></i></button>
          <button class='slideup btn btn-inverse'><i class='icon-chevron-down icon-white'></i></button>
        </div>

        <div class='photo-actions'>
          <button class='btn btn-inverse'><i class='icon-star icon-white'></i> Love it!</button>
          <button class='btn btn-inverse'><i class='icon-plus icon-white'></i> Add To Your Feed</button>
        </div>
      </div>
    </div>
    <% end %>

  <% else %>
    'Oops! There are no photos in your feed yet!'
  <% end %>
</div>
